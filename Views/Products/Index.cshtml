@model IEnumerable<Undisclosed_Shop.Models.Products>

@{
    Layout = null;

}

<!DOCTYPE html>
<h2 style="margin-left: 5px">Product List</h2>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>List of Products</title>

    <style>
        table {
            font-family: arial, sans-serif;
            border-collapse: collapse;
            width: 100%;
        }

        td, th {
            border: 1px solid #dddddd;
            text-align: left;
            padding: 8px;
        }

        tr:nth-child(even) {
            background-color: #dddddd;
        }
    </style>
</head>
<body>
    <p>
        <div type="button" class="btn header-item" style="margin-top: 9px">
            @Html.ActionLink("Create New", "Create", "Products", routeValues: null, htmlAttributes: new { id = "loginLink", @class = "btn header-item" })
        </div>

        <div type="button" class="btn header-item" style="margin-top: 9px">
            @Html.ActionLink("Manage", "SetPassword", "Manage", routeValues: null, htmlAttributes: new { id = "loginLink", @class = "btn header-item" })
        </div>
    </p>

    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.ProductName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ProductStock)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ProductPrice)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.ProductName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ProductStock)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ProductPrice)
                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.ProductId }) |
                    @Html.ActionLink("Details", "Details", new { id = item.ProductId }) |
                    @Html.ActionLink("Delete", "Delete", new { id = item.ProductId })
                </td>
            </tr>
        }

    </table>
</body>
</html>
